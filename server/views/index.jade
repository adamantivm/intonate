extends layout

block content
  h1= title
  p Welcome to #{title}

  p Upload new blab:
  form(action="blabs", method="post", enctype="multipart/form-data")
    p Text:
    input(type="text", name="text")
    br
    input(type="file", name="audio")
    br
    input(type="submit", name="Send to server")


  hr
  h2 Current blabs
  ul
    each blab in blabs
      li #{blab.text}
        a(href="/blabs/#{blab.id}/audio.m4a") show
        form(action="/blabs/#{blab.id}/remove", method="post")
          input(type="submit", value="delete")
    
